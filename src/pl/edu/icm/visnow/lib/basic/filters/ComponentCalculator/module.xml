<?xml version="1.0" encoding="UTF-8"?>

<module name="component calculator" class="ComponentCalculator">

    <inputs>
       <input name="inField" type="pl.edu.icm.visnow.lib.types.VNField" modifiers="TRIGGERING"> <!--NECESSARY:-->
       </input>
    </inputs>

    <outputs>
        <output name="outRegularField" type="pl.edu.icm.visnow.lib.types.VNRegularField">
            <schema>
                <param name="REGULAR" value="true"/>
            </schema>
        </output>
        <output name="outIrregularField" type="pl.edu.icm.visnow.lib.types.VNIrregularField">
            <schema>
                <param name="IRREGULAR" value="true"/>
            </schema>
        </output>
    </outputs>
    
    <description value="Simple mathematical expression calculator for data components."/>
</module>
